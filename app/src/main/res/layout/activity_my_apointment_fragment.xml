<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center"
    android:paddingLeft="@dimen/booking"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Whiz.vaishali.deSpa.MyApointmentFragment">

    <ListView
        android:id="@+id/cust_listView3"
        android:divider="@color/colorAccent"
        android:dividerHeight="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <TextView
        android:id="@+id/myapptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0a10ca"
        android:textSize="25dp"
        android:text="To view your appointment list"

        />
    <TextView
        android:id="@+id/myapptext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#e1192d"
        android:text="''Please login'' "

        />

    <TextView
        android:id="@+id/myapptext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You haven't placed an order yet"
        android:textColor="#0a10ca"
        android:textSize="21dp"
        />

    <TextView
        android:id="@+id/myapptext4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Nothing to show "
        android:textColor="#0a10ca"
        android:textSize="18dp"

        />
    <TextView
        android:id="@+id/myapptext5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please check your network connection. "
        android:textColor="#0a10ca"
        android:textSize="18dp"
        />

</LinearLayout>
